{
	"name": "@natlibfi/melinda-record-import-harvester-publication-archives",
	"description": "Helmet record harvester for the Melinda record batch import system ",
	"author": {
		"name": "The National Library of Finland"
	},
	"keywords": [],
	"homepage": "https://github.com/natlibfi/melinda-record-import-harvester-publication-archives",
	"bugs": {
		"url": "https://github.com/natlibfi/melinda-record-import-harvester-publication-archives/issues"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:natlibfi/melinda-record-import-harvester-publication-archives.git"
	},
	"license": "AGPL-3.0+",
	"version": "1.0.0",
	"main": "./dist/index.js",
	"engines": {
		"node": ">=7"
	},
	"scripts": {
		"start": "node dist/index.js",
		"prepublishOnly": "npm run build:transpile",
		"check-deps": "npm-check;exit 0",
		"lint": "eslint --fix src",
		"test": "npm run lint",
		"clean": "rimraf build dist",
		"build:transpile": "babel src --source-maps --out-dir=dist --minified",
		"build": "npm run build:transpile && npm run check-deps",
		"watch:test": "cross-env DEBUG=1 NODE_ENV=debug nodemon --watch src --exec 'npm test && babel-node src/index.js'",
		"watch:build": "cross-env DEBUG=1 NODE_ENV=debug nodemon --watch src --exec 'babel-node src/index.js'",
		"publish-to-npm": "npm install && npm test && npm publish --access=public"
	},
	"dependencies": {
		"@natlibfi/melinda-record-import-commons": "^3.1.1",
		"filterxml": "^1.1.4",
		"http-status-codes": "^1.3.0",
		"moment": "^2.22.2",
		"node-fetch": "^2.0.0",
		"oai-pmh": "^2.0.2",
		"winston": "^3.0.0",
		"xml2js": "^0.4.19"
	},
	"devDependencies": {
		"babel-cli": "^6.26.0",
		"babel-eslint": "^9.0.0",
		"babel-preset-env": "^1.6.1",
		"babel-register": "^6.26.0",
		"cross-env": "^5.2.0",
		"eslint": "^5.2.0",
		"eslint-config-xo": ">=0.24.1 <1.0.0",
		"eslint-plugin-import": "^2.13.0",
		"nodemon": "^1.18.3",
		"npm-check": "^5.7.1",
		"rimraf": "^2.6.2"
	},
	"eslintConfig": {
		"parser": "babel-eslint",
		"plugins": [
			"import"
		],
		"extends": [
			"xo",
			"plugin:import/errors"
		],
		"rules": {
			"prefer-arrow-callback": [
				"error"
			]
		}
	},
	"babel": {
		"presets": [
			[
				"env",
				{
					"targets": {
						"node": "7"
					}
				}
			]
		]
	}
}
